import os
import sys

POSSIBLE_TOPDIR = os.path.normpath(os.path.join(os.path.abspath(sys.argv[0]),
                                   os.pardir,
                                   os.pardir))
if os.path.exists(os.path.join(POSSIBLE_TOPDIR, 'nova', '__init__.py')):
    sys.path.insert(0, POSSIBLE_TOPDIR)

from nova import context
from nova import db
from nova import flags
from nova import utils
from nova.virt.baremetal import bmdb


def main():
    argv = flags.parse_args(sys.argv)
    #logging.setup()

    fmt = "%-8s  %-12s  %-36s  %-6s  %-8s  %-8s  %-16s  %-16s " + \
          "%-5s  %-18s  %-4s"
    print fmt % (
                _('ID'),
                _('SERVICE_HOST'),
                _('INSTANCE_UUID'),
                _('CPUS'),
                _('Memory'),
                _('Disk'),
                _('PM_Address'),
                _('PM_User'),
                _('TERMINAL_PORT'),
                _('PROV_MAC'),
                _('PROV_VLAN'))
    ctxt = context.get_admin_context()
    for ph in bmdb.bm_node_get_all(ctxt):
        print fmt % (ph['id'], ph['service_host'], ph['instance_uuid'],
                     ph['cpus'], ph['memory_mb'], ph['local_gb'],
                     ph['pm_address'], ph['pm_user'],
                     ph['terminal_port'],
                     ph['prov_mac_address'], ph['prov_vlan_id'])
    print


if __name__ == "__main__":
    main()
